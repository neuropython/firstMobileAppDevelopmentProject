<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0CE"
    tools:context=".MainActivity">


    <!--        i want this button to be rounded-->
    <Button
        android:id="@+id/selectButton"
        android:layout_width="188dp"
        android:layout_height="72dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#0C356A"
        android:text="Play!!!"
        app:iconTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="59dp"
        android:layout_marginTop="232dp"
        android:fontFamily="monospace"
        android:text="Welcome in lotto game, please choose if you already have an account or you want to register"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0174BE"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/ageswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#FFF0CE"
        android:backgroundTint="#FFF0CE"
        android:textCursorDrawable="@drawable/oval_button_background"
        app:layout_constraintBottom_toTopOf="@+id/selectButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="413dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lotto" />

    <Button
        android:id="@+id/button4"
        android:layout_width="386dp"
        android:layout_height="46dp"
        android:text="Login"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="457dp" />


    <Button
        android:id="@+id/button5"
        android:layout_width="381dp"
        android:layout_height="46dp"
        android:text="Registation"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="393dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
